{
  "manifest_version": 3,
  "name": "Superagent Chrome",
  "version": "1.0.0",
  "description": "Superagent Chrome extension built with React, TypeScript and shadcn/ui",
  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Open Superagent"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
